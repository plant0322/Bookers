<h1>Editing Book</h1>

<!--ここからバリデーション-->
<% if @book.errors.any? %>
  <div class="error_message">
    <h2 class="error_count"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>


<!--ここから編集フォーム-->
<%= form_with model: @book do |f| %>
  <div class="form">
    <label for="book_title">Title</label>
    <div class="form_item"><%= f.text_field :title %></div>

    <lavel for="book_body">Body</lavel>
    <div class="form_item"><%= f.text_area :body %></div>

    <div class="form_item"><%= f.submit 'Update Book' %></div>
  </div>
<% end %>

<div class="link">
  <%= link_to 'Show', book_path(@book.id) %>
  |
  <%= link_to 'Back', books_path %>
 </div>